<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.chinese.mapper.TestChineseSubMapper">

    <resultMap type="TestChineseSub" id="TestChineseSubResult">
        <result property="questionId"    column="question_id"    />
        <result property="content"    column="content"    />
        <result property="answer"    column="answer"    />
    </resultMap>

    <sql id="selectTestChineseSubVo">
        select question_id, content, answer from test_chinese_sub
    </sql>

    <select id="selectTestChineseSubList" parameterType="TestChineseSub" resultMap="TestChineseSubResult">
        <include refid="selectTestChineseSubVo"/>
        <where>
            <if test="questionId != null  and questionId != ''"> and question_id like concat('%', #{questionId}, '%')</if>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
        </where>
    </select>

    <select id="selectTestChineseSubByQuestionId" parameterType="String" resultMap="TestChineseSubResult">
        <include refid="selectTestChineseSubVo"/>
        where question_id = #{questionId}
    </select>

    <insert id="insertTestChineseSub" parameterType="TestChineseSub">
        <selectKey keyProperty="questionId" resultType="String" order="BEFORE">
            select concat(date_format(curdate(), '%Y%m%d'), IFNULL((count(*) + 1), 1))
            from test_chinese_sub
            where substr(question_id, 1, 8) = date_format(curdate(), '%Y%m%d')
        </selectKey>
        insert into test_chinese_sub
        <trim prefix="(" suffix=")" suffixOverrides=",">
            question_id,
            <if test="content != null and content != ''">content,</if>
            <if test="answer != null and answer != ''">answer,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
           #{questionId},
            <if test="content != null and content != ''">#{content},</if>
            <if test="answer != null and answer != ''">#{answer},</if>
         </trim>
    </insert>

    <update id="updateTestChineseSub" parameterType="TestChineseSub">
        update test_chinese_sub
        <trim prefix="SET" suffixOverrides=",">
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="answer != null and answer != ''">answer = #{answer},</if>
        </trim>
        where question_id = #{questionId}
    </update>

    <delete id="deleteTestChineseSubByQuestionId" parameterType="String">
        delete from test_chinese_sub where question_id = #{questionId}
    </delete>

    <delete id="deleteTestChineseSubByQuestionIds" parameterType="String">
        delete from test_chinese_sub where question_id in
        <foreach item="questionId" collection="array" open="(" separator="," close=")">
            #{questionId}
        </foreach>
    </delete>
</mapper>
