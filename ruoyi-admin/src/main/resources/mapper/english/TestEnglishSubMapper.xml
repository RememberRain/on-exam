<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.english.mapper.TestEnglishSubMapper">
    
    <resultMap type="TestEnglishSub" id="TestEnglishSubResult">
        <result property="questionId"    column="question_id"    />
        <result property="content"    column="content"    />
        <result property="answer"    column="answer"    />
    </resultMap>

    <sql id="selectTestEnglishSubVo">
        select question_id, content, answer from test_english_sub
    </sql>

    <select id="selectTestEnglishSubList" parameterType="TestEnglishSub" resultMap="TestEnglishSubResult">
        <include refid="selectTestEnglishSubVo"/>
        <where>  
            <if test="questionId != null  and questionId != ''"> and question_id like concat('%', #{questionId}, '%')</if>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
        </where>
    </select>
    
    <select id="selectTestEnglishSubByQuestionId" parameterType="String" resultMap="TestEnglishSubResult">
        <include refid="selectTestEnglishSubVo"/>
        where question_id = #{questionId}
    </select>
        
    <insert id="insertTestEnglishSub" parameterType="TestEnglishSub">
        insert into test_english_sub
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="questionId != null">question_id,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="answer != null and answer != ''">answer,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="questionId != null">#{questionId},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="answer != null and answer != ''">#{answer},</if>
         </trim>
    </insert>

    <update id="updateTestEnglishSub" parameterType="TestEnglishSub">
        update test_english_sub
        <trim prefix="SET" suffixOverrides=",">
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="answer != null and answer != ''">answer = #{answer},</if>
        </trim>
        where question_id = #{questionId}
    </update>

    <delete id="deleteTestEnglishSubByQuestionId" parameterType="String">
        delete from test_english_sub where question_id = #{questionId}
    </delete>

    <delete id="deleteTestEnglishSubByQuestionIds" parameterType="String">
        delete from test_english_sub where question_id in 
        <foreach item="questionId" collection="array" open="(" separator="," close=")">
            #{questionId}
        </foreach>
    </delete>
</mapper>